<%- include('../partials/assets/form'); %>

<div>
  You can register as a <a href="/page/users/signup_page">user</a> or <a href="/page/users/agent_signup_page"> Solo Agent</a>

</div>



<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Agency Registration form
      </h1>
         <%- include('../partials/messages'); %>

      <form action="/users/user/singup" method="POST">

        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="firstname"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="name">LastName</label>
          <input
            type="name"
            id="name"
            name="lastname"
            class="form-control"
            placeholder="Enter Name lastname"
            value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="phone number">phone number</label>
          <input
            type="tel"
            id="tel"
            name="phone_number"
            class="form-control"
            placeholder="Enter phone number"
            value="<%= typeof phone_number != 'undefined' ? phone_number : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/page/users/login">Login</a></p>
    </div>
  </div>
</div>